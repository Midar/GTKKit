#!/bin/bash

PREFIX="--PREFIX--"
PACKAGE="--PACKAGE--"
VERSION="--VERSION--"

echo "Ensuring that $PACKAGE is built."

if [ -e .tup ]; then
  tup
else
  tup init && tup
fi

if [ $? != 0 ]; then
  echo "Tup reports a build error."
  exit 1
fi

echo "Rebuilding documentation."
doxygen

if [ $? != 0 ]; then
  echo "Doxygen reports a documentation build error."
  exit 1
fi

